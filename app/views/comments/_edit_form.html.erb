<div class="comments">  
  <div class="topics">
    <%= form_for(@comment, url: post_comment_path(@post, @comment), method: :patch, authenticity_token: true, remote: true, html: { id: "comment-update-form", multipart: true }) do |f| %>
      <h1 class="text-center">
        Edit your comment.
      </h1>

      <div class="form-group">
        <h4 class="text-center"> Post Image </h4>
          <div id="preview-image">
            <% if @comment.image? %>
              <%= image_tag @comment.image, class: "img-settings img-responsive center-block" %>
            <% end %>
          </div>
        <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
        <h4> <%= f.label :text_field, "Comments" %> </h4>
        <%= f.text_field :body, id: "comment_body_field", class: 'form-control' %>
        <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>
  </div>
</div>