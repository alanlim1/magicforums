$('.comment[data-id=<%=@comment.id%>]').html("<%=j render partial: 'comments/edit_form', locals: { comment: @comment, post: @comment.post } %>")

$('.cancel-button').on('click', function() {
  $('.comment[data-id=<%=@comment.id%>]').replaceWith("<%=j render partial: 'comments/comment', locals: { comment: @comment, post: @comment.post } %>")
})