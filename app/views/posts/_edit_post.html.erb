<div class="posts edit">
  <%= form_for(@post, url: topic_post_path(@topic, post), method: :patch, remote: true, authenticity_token: true, html: { id: "post-update-form", multipart: true }) do |f| %>
    <h1 class="text-center">Edit your post and content.</h1>
      <div class="form-group">
        <h4 class="text-center"> Post Image </h4>
          <div id="preview-image">
            <% if @post.image? %>
              <%= image_tag @post.image, class: "img-settings img-responsive center-block" %>
            <% end %>
          </div>
      </div>

      <div class="form-group">
        <div class="previewimage">
          <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
        </div>
      </div>

        <h4> <%= f.label :title_field, "Title" %> </h4>
        <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
        <h4> <%= f.label :text_field, "Post description" %> </h4>
        <%= f.text_field :body, required: true, id: "post_body_field", class: 'form-control' %>
      <div class="form-group text-center">
        <%= f.submit "Update Post", class: "btn btn-success btn-lg" %>
      </div>
  <% end %>
</div>

