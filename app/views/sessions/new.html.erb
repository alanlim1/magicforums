<div class="topics">
  <%= form_tag sessions_path, class: "features" do %>
   <h1 class="edit form-header text-center">
     Login
   </h1>
   <br>
   <div class="form-group">
     <%= label_tag "Email" %>
     <%= text_field_tag :email, params[:email], :placeholder => "Enter email address", required: true, id: "user_email_field", class: 'form-control' %>
     <%= label_tag "Password" %>
     <%= password_field_tag :password, nil, id: "user_password_field", :placeholder => "Enter password", class: 'form-control' %>
   </div>  

    <div class="form-group text-center">
      <%= submit_tag "Press Enter to Login", class: "btn btn-success btn-lg" %>
        <%= link_to "Forgot Your Password?", new_password_reset_path, class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>