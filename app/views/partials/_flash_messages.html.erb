<div id="flash-messages-container">

  <% flash.each do |k,v| %>
    <section class="flash-messages">
      <div style="padding: 55px;">
        <div class="alert alert-<%=k%>">
          <button type="button" class="close" data-dismiss="alert">
            &times;
          </button>
          <div class="message">
            <%= display_message(v) %>
          </div>
        </div>
      </div>
    </section>
  <% end %>

</div>  
