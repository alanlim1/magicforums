<div class="topics">
  <%= form_for(@user, url: user_path(@user), html: { id: "user-update-form" }) do |f| %>
    <h1 class="edit text-center">
      Update your information.
    </h1>

    <div class="form-group">
      <h4>
        <%= f.label :title_field, "Change your email." %> 
      </h4>
        <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>
      <h4> 
        <%= f.label :password_field, "Enter a new password." %> 
      </h4>
        <%= f.password_field :password, required: true, id: "user_password_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Update Credentials", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>